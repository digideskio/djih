<!doctype html>

<html>
<head>
	<title>Please Login</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="css/poll.css">
</head>

<body>

	<div class="header">
		<center><p> Please Login </p></center>
	</div>


	<div class="main">

		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>

		<!-- Content goes here -->
		<center>
        <br>
        <br>
        <span>If you do not have an account, <a href="/addAccount">you can create one</a></span>
        <br>
        <br>

			{{#if message}}<h5> {{message}} </h5> {{/if}}

			<form role="form" method="post" action="/login">
			  <div class="form-group">
			    <label for="nameLabel">Name</label>
			    <input type="text" class="form-control" name="name" placeholder="Enter Name">
			  </div>
			  <div class="form-group">
			    <label for="passwordLabel">Password</label>
			    <input type="password" class="form-control" name="password" placeholder="Password">
			  </div>
			  <button type="submit" class="btn btn-default">Submit</button>
			</form>

		</center>
		<!-- End Content -->

		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>
	<script type="text/javascript" src="js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="js/bootstrap.js"></script>
