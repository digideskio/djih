<!doctype html>

<html>
<head>
	<title>{{action}}</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="/css/poll.css">   
	<script src='https://cdn.firebase.com/v0/firebase.js'></script> 
	 
     
</head>

<body>

	<div class="header">
		<center>
			<table>
				<tr>
					<td width="50" align="center">
						<button type="button" class="btn btn-default" onclick="window.location.href='/eventView/{{pollInfo.id}}'">
							<span class="glyphicon glyphicon-arrow-left"></span>
						</button>
					</td>
					<td align="center"><p>{{action}}</p></td>
					<td width="50" align="center"></td>
				</tr>
			</table>
		</center>
	</div>


	<div class="main">
		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
			<br>
			<br>
		<!-- Content goes here -->
		<center>
		

			<div>	
				<table>
					<tbody>
					<tr>
					<td ><img src="{{pollInfo.photo}}" class="img-rounded" width="60" height="60"></td>
					<td align="center" valign="center">
						<h3>Poll: {{pollInfo.title}}</h3>
						<p>{{pollInfo.description}}</td>
					</tr> 
					</tbody>
				</table>	
			</div>
			<hr>

			{{#if vote}}
				<h3>Vote on an Option:</h3>
				<form method="POST" action="/submitVote">
					<input type="hidden" name="pollid" value="{{pollInfo.id}}">
					<input type="hidden" name="action" value="vote">
					<select class="form-control" name="voteChoice">
					{{#each choices}}
						<option value="{{id}}">{{choice}}</option>
					{{/each}}
					</select><br>
					<label> Say Something:<br><input type="text" class="form-control" name="comment" placeholder="Add A Comment About Your Vote">
					<br><button type="submit" class="btn btn-success">Submit Vote!</button><br>
					<label>When you submit your vote,<br> others will see that you are attending the event</label>
				</form>
			{{/if}}

			{{#if changevote}}
				<p>You voted: {{myVote.choice}}</p>
				<p>Change Your Vote:</p>
				<form method="POST" action="/submitVote">
					<input type="hidden" name="pollid" value="{{pollInfo.id}}">
					<input type="hidden" name="voteid" value="{{myVote.id}}">
					<input type="hidden" name="action" value="change">
					<select class="form-control" name="voteChoice">
					{{#each choices}}
						<option value="{{id}}">{{choice}}</option>
					{{/each}}
					</select><br>
					<label> Say Something:<br><input type="text" class="form-control" name="comment" placeholder="Add A Comment About Your Vote">
					<br>
					<a href="/eventView/{{pollInfo.id}}"><button type="button" class="btn btn-default">Cancel</button></a>
					&nbsp;&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-warning">Change Vote!</button>
				</form>
			{{/if}}

			{{#if deletevote}}
			
				<p>You Voted: {{myVote.choice}}</p>
				<p>Are you sure you want to delete your vote? This indicates you are not attending the Hangout.</p>
			
				<form method="POST" action="/submitVote">
					<input type="hidden" name="pollid" value="{{pollInfo.id}}">
					<input type="hidden" name="voteid" value="{{myVote.id}}">
					<input type="hidden" name="action" value="delete">
					<a href="/eventView/{{pollInfo.id}}"><button type="button" class="btn btn-default">Cancel</button></a>
					&nbsp;&nbsp;&nbsp;&nbsp;<button type="submit" class="btn btn-danger">Delete Vote!</button>
				</form>
			{{/if}}


		<!-- End Content -->
		</center>
		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	
	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>


	
	<script type="text/javascript" src="../js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="../js/bootstrap.js"></script>

