<!doctype html>

<html>
<head>
	<title>Hangout Feed </title> 
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="css/poll.css">
	 
</head>

<body>

	<div class="header">
		<center>
			<table>
				<tr>
					<td width="100" align="left"><img src="http://magoosh.com/gre/files/2013/07/stanford_logo.png"></td>
					<td align="left"><p>Hangouts</p></td>
					<td width="50" align="right">
						<button type="button" class="btn btn-default" onclick="window.location.href='/addEvent'">
							<span class="glyphicon glyphicon-plus"></span>
						</button>
					</td>
				</tr>
			</table>
		</center>
	</div>
	<div class="subheader">
		<center>
			<table>
				<tr>
					<td><span>For Stanford students</span></td>
				</tr>
			</table>
		</center>
	</div>

	<div class="main">

		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
			<br>
			<br>
			
		<!-- Content goes here -->
		<center>

			

			{{#if events}}
				{{#each events}}
					{{#if expired}}
					{{else}}
					<div class = event ><!-- onclick behavior = open event page --> 
						<table>
							<tr onclick="document.location = 'eventView/{{id}}';">
								<td width="75"><img src="{{photo}}" class = "img-rounded"></td>
								<td align="center" valign="center"><a href="eventView/{{id}}"><h3>{{title}}</h3><p>{{description}}</p></a></td>
								<td width="75" align="right"><span class="label label-success">
									{{#if nospots}}No spots left!
									{{else}}{{spots}}
									{{/if}}</span>
									<br><span class="label label-success">{{timeleft}}</span></td>
							</tr>
						</table><hr style="color:#000000;width:100%">
					</div>
					{{/if}}
				{{/each}}
			{{else}}
				<h1> You have 0 Event Polls</h1>
			{{/if}}

		</center>
		<!-- End Content -->

		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>

	
	<script type="text/javascript" src="js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="js/bootstrap.js"></script>
