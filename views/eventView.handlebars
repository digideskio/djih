<!doctype html>

<html>
<head>
	<title>Results</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="/css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="/css/poll.css">   
	<script src='https://cdn.firebase.com/v0/firebase.js'></script> 
	 
     
</head>

<body>

	<div class="header">
		<center>
			<table>
				<tr>
					<td width="50" align="center">
						<button type="button" class="btn btn-default" onclick="window.location.href='{{backUrl}}'">
							<span class="glyphicon glyphicon-arrow-left"></span>
						</button>
					</td>
					<td align="center"><p>Results</p></td>
					<td width="50" align="center"></td>
				</tr>
			</table>
		</center>
	</div>


	<div class="main">
		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
			<br>
			
		<!-- Content goes here -->
		<center>
		
		{{#if error}}
		<h3>{{error}}</h3>
		{{else}}
			<div class=event>	
				<table>
				
					<tr>
					<td width="75"><img src="{{pollInfo.photo}}" class="img-rounded"></td>
					
					<td align="center" valign="center"><h3>{{pollInfo.title}}</h3><p>Comment: {{pollInfo.description}}</p></a></td>
					
					<td width="75" align="right">
					 {{#if pollInfo.expired}}
					 <span class="label label-success">Closed</span>
					 {{else}}
					 	{{#if nospotleft}}
					 		<span class="label label-success">No Spots Left<br>{{pollInfo.timeleft}}</span>
					 	{{else}}
					 		{{#if nolimit}}
					 			<span class="label label-success"><br>{{pollInfo.timeleft}}</span>
					 		{{else}}
					 			<span class="label label-success">{{spotleft}} spots left<br>{{pollInfo.timeleft}}</span>
					 		{{/if}}
					 	{{/if}}
					 {{/if}}
					</td>

					</tr> 
				
				</table>	
			</div>
			
			<hr class="event" style="color:#000000;width:100%">

			{{#if pollInfo.expired}}
				<h4>Majority voted for: {{maxchoice}} ({{maxcount}} votes)</h4>
			{{else}}
				<h3>Options:</h3>	
				<div class="chart">
					<table>
						{{#each choices}}
							<tr>
								<td style="text-align:left">{{choice}}</td>
								<td><div style="width: {{count}}9px ; text-align:left">{{count}}</div></td>
							</tr>
						{{/each}}
					</table>
				</div>
			{{/if}}
		{{/if}}
		<hr>


		{{#if myVote}}
			{{#if pollInfo.expired}}
				<span>You attended this Hangout!</span><br>

				<span>You voted for: {{myVote.choice}}</span><br><br>
			{{else}}
				<a href="/vote?action=change&pollid={{pollInfo.id}}&voteid={{myVote.id}}" class="btn btn-warning">Change Vote</a> &nbsp;&nbsp;&nbsp;&nbsp;
				<a href="/vote?action=delete&pollid={{pollInfo.id}}&voteid={{myVote.id}}" class="btn btn-danger">I Am Not Attending</a><br>
				<span>You are attending this Hangout!</span><br>

				<span>You voted for: {{myVote.choice}}</span><br><br>
				

			{{/if}}

		{{else}}
			{{#unless pollInfo.expired}}
				{{#if nospotleft}}
					<h3>No Spots Left In Event</h3>
				{{else}}
					<a href="/vote?action=vote&pollid={{pollInfo.id}}" class="btn btn-success">I Am Attending!</a><br>
					<span>Click to Vote on Hangout Option</span>
				{{/if}}
			<br><hr>
			{{/unless}}
		{{/if}}
		

		
		<h3>Participants:</h3>
	    {{#if choice_info}}
	    {{#each choice_info}}
		<div class = "event">
		<table>
			<tr>
			<td width="75"><img src="{{photo}}" class="img-rounded"></td>
			<td align="center" valign="center"><p> {{name}} voted for: {{choice}}</p><p>comment: {{comment}}</p>
			</td>
			<td width="75" align="right">
			</td>
			</tr>
			
		</table> <hr style="color:#000033;width:50%">
		</div>
		{{/each}}
		{{else}}
			<p> Sorry! There are no participants yet.</p>
		{{/if}}

		<h3>Chat Room:</h3>
		<!--{{#each choice_info}}
		<div>
		<table>
			<tr>
			<td style="text-align:left" ><p> {{name}}: </td>
			<td style="text-align:center" ><p> {{comment}}</p>
			</td>
			</tr>
		</table> <hr style="color:#000033;width:50%">
		</div>
		{{/each}}-->

		<div id="chat-box-container">
			<input type="hidden" id="user_name" value="{{user.name}}"/>
     		<input type="hidden" id="poll_id" value="{{pollInfo.id}}"/>

            <div id="messageList" class="messages"> 
            </div>
            <div><h3></h3></div>
            <!-- <input type='text' id='nameInput' placeholder='Name' style="width:94%; "> -->
        <div class="input-group">
        <textarea type='text'  rows="1" id='messageInput' placeholder='Type your comment here...' class="chatTextArea"></textarea>
        <span class="input-group-btn">
           <button class="btn btn-default" id="sendMessageBtn" type="button">Send</button>
	    </span>
        </div>
        </div>

        <br><br>
 
 		{{#if myPoll}}
        	<div align="center">
				<button type="button" id="event_delete" class="btn btn-primary btn-danger" >Delete Hangout</button>
			</div>
		{{/if}}
		
		<!-- End Content -->
		</center>
		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	
	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>


	
	<script type="text/javascript" src="../js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="../js/bootstrap.js"></script>
	<script src="../js/result_helper.js"></script>
