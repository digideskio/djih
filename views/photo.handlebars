<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Photo Portfolio</title>

    <!-- Bootstrap -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/cover.css" rel="stylesheet">
    <link href="css/magnific-popup.css" rel="stylesheet">

    <script src="js/ratio.js"></script>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="js/jquery-1.8.3.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.exif.js"></script>
    <script src="js/jquery.magnific-popup.min.js" rel="stylesheet"></script>

    <script>
      var formatExifDateTime = function(d){
        date = d.split(' ')[0];
        parts = date.split(':');
        return parts[1]+'/'+parts[2]+'/'+parts[0];
      };

      var addPhotoInfoFromExif = function(id, photo){
        var model = photo.exif('Model');
        var fl = photo.exif('FocalLength');
        var fnum = photo.exif('FNumber');
        var et = photo.exif('ExposureTime');
        var ss = ((et > 1) ? et : Ratio.parse(et).simplify().toString());
        var iso = photo.exif('ISOSpeedRatings');
        var date = formatExifDateTime(photo.exif('DateTime')[0]);

        var info = 'Camera: ' + model + '<br>' + 
          'Focal Length: ' + fl + 'mm' + '<br>' + 
          'Aperture: f/' + fnum + '<br>' +
          'Shutter Speed: ' + ss + 's' + '<br>' +
          'ISO: ' + iso + '<br>' +
          'Date: ' + date;

        $('#'+id+'_info').html(info).css('display', 'block');
      }

    </script>

  </head>
  <body>
   
  	<div class="site-wrapper">

      <div class="site-wrapper-inner">

        <div class="cover-container">

          <!--
          <div class="masthead clearfix">
            <div class="inner">
              <h3 class="masthead-brand">DJ</h3>
              <ul class="nav masthead-nav">
                <li><a href="/">Home</a></li>
                <li class="active"><a href="/photo">Photos</a></li>
                <li><a href="#">Contact</a></li>
              </ul>
            </div>
          </div>
          -->

          <div class="inner cover">
            <h1 class="cover-heading">Never Stop Exploring</h1>
            <p class="lead">"Photography takes an instant out of time, altering life by holding it still." - Dorothea Lange</p>
            
            <ul class="gallery">
              
              {{#each photos}}
                <a href="#" id="{{this.id}}_link" title="{{this.location}}">
                  <li>
                    <img id="{{this.id}}" src="images/{{this.id}}_small.JPG">
                    <h3>{{this.location}}</h3>
                    <p id="{{this.id}}_info">Photo Description</p>
                  </li>
                </a>
                <script>
                  $('#{{this.id}}_link').click(function(e){
                    e.preventDefault();
                  });

                  $('#{{this.id}}').load(function(){
                    var photo = $(this);
                    photo.exifLoad(function(){
                      addPhotoInfoFromExif('{{this.id}}', photo);
                    });

                    $('#{{this.id}}_link').magnificPopup({
                      disableOn: 480,
                      closeOnContentClick: true,
                      closeOnBgClick: true,
                      showCloseBtn: true,
                      items: {
                        src: 'images/{{this.id}}.JPG',
                      },
                      type: 'image',
                      image: {
                        verticalFit: true,
                        titleSrc: function(){return '<center>{{this.location}}</center>';}
                      },
                      mainClass: 'mfp-img-mobile'
                    });
                  });

                </script>
              {{/each}}
            </ul>

          <!--
          <div class="mastfoot">
            <div class="inner">
              <p>Cover template for <a href="http://getbootstrap.com">Bootstrap</a>, by <a href="https://twitter.com/mdo">@mdo</a>.</p>
            </div>
          </div>
          -->

        </div>

      </div>

    </div>


  </body>
</html>