<!doctype html>

<html>
<head>
	<title>Create A New Account</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="css/poll.css">
	 
</head>

<body>

	<div class="header">
		<center>
			<table>
				<tr>
					<td width="50" align="center">
						<button type="button" class="btn btn-default" onclick="window.location.href='/login'">
							<span class="glyphicon glyphicon-arrow-left"></span>
						</button>
					</td>
					<td align="center"><p>Add A New Account</p></td>
					<td width="50" align="right"></td>
				</tr>
			</table>
		</center>
	</div>


	<div class="main">

		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
		<br>
		<br>

		<!-- Content goes here -->
		<center>

			<span>At this time sign up is only open to Stanford students</span>
			<br><br>

			
			{{#if missingFields}}
				<strong><FONT COLOR="blue">* Required Fields</FONT></strong><br><br>
			{{/if}}
			{{#if nameTaken}}
				<strong><FONT COLOR="blue">* Name {{name}} already taken.</font></strong>
			{{/if}}

			<form role="form" method="post" action="/createAccount">
				<div class="form-group">
					{{#if missingEmail}}
						<label for="description"><strong><font color="blue">* Please input a valid Stanford email</font></strong></label>
					{{else}}
						<label for="description">Valid Stanford email.</label>
					{{/if}}
					{{#if email}}
						<input type="text" class="form-control" name="email" value="{{email}}">
					{{else}}
						<input type="text" class="form-control" name="email" placeholder="Stanford Email (required)">
					{{/if}}
				</div>
				<div class="form-group">
					{{#if missingName}}
						<label for="question"><strong><font color="blue">Please Input Your Name</font></strong></label>
					{{else}}
						{{#if nameTaken}}
							<label for="question"><strong><font color="blue">Please Select A Different Name</font></strong></label>
						{{else}}
							<label for="question">Name</label>
						{{/if}}
					{{/if}}
					{{#if name}}
						{{#if nameTaken}}
							<input type="text" class="form-control" name="name" value="Your Name (required)">
						{{else}}
							<input type="text" class="form-control" name="name" value="{{name}}">
						{{/if}}
					{{else}}
						<input type="text" class="form-control" name="name" placeholder="Your Name (required)">
					{{/if}}
				</div>
				<div class="form-group">
					{{#if missingPassword}}
						<label for="description"><strong><font color="blue">* Please Input a Password</font></strong></label>
					{{else}}
						<label for="description">Password</label>
					{{/if}}
					<input type="password" class="form-control" name="password" placeholder="Your Password (required)	">
				</div>
				<div class="form-group">
					{{#if invalidProfilePic}}
						<label for="description"><strong><font color="blue">* Invalid Image URL</font></strong></label>
					{{else}}
						<label for="description">Image URL for Your Profile Picture</label>
					{{/if}}
					{{#if profilepic}}
						<input type="text" class="form-control" name="profilepic" value="{{profilepic}}">
					{{else}}
						<input type="text" class="form-control" name="profilepic" placeholder="Profile Picture Image URL">
					{{/if}}
				</div>
				<button type="submit" class="btn btn-success">Submit</button>
			</form>

		</center>
		<!-- End Content -->

		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>
	
	<script type="text/javascript" src="js/jquery-1.11.0.js"></script>
