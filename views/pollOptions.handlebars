<!doctype html>

<html>
<head>
	<title>Hangout Details</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="css/poll.css">

	<!-- DATE PICKER module from: http://www.malot.fr/bootstrap-datetimepicker/ -->
    <link href="css/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
</head>

<body>

	<div class="header">
		<center>
			<table>
				<tr>
					<td width="50" align="center">
						<!-- use form to pass previous values back to addEvent page -->
						<form role="form" method="post" action="/addEvent">
							<input type="hidden" name="type" value="event">
							<input type="hidden" name="title" value="{{title}}">
							<input type="hidden" name="description" value="{{description}}">
							{{#if place1}}<input type="hidden" name="place1" value="{{place1}}">{{/if}}
							{{#if place2}}<input type="hidden" name="place2" value="{{place2}}">{{/if}}
							{{#if place3}}<input type="hidden" name="place3" value="{{place3}}">{{/if}}
							<button type="submit" class="btn btn-default">
								<span class="glyphicon glyphicon-arrow-left"></span>
							</button>
						</form>
					</td>
					<td align="center"><p>Hangout Details</p></td>
					<td width="50" align="center"></td>
				</tr>
			</table>
		</center>
	</div>


	<div class="main">

		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
		<br>
		<br>
			
		<!-- Content goes here -->
		<center>

			
			{{#if missingFields}}
				<strong><FONT COLOR="blue">*Required Fields</FONT></strong><br><br>
			{{/if}}

			<form role="form" method="post" action="/createEvent">

				<input type="hidden" name="type" value="event">
				<input type="hidden" name="title" value="{{title}}">
				<input type="hidden" name="description" value="{{description}}">
				{{#if place1}}<input type="hidden" name="place1" value="{{place1}}">{{/if}}
				{{#if place2}}<input type="hidden" name="place2" value="{{place2}}">{{/if}}
				{{#if place3}}<input type="hidden" name="place3" value="{{place3}}">{{/if}}

				{{#if invalidDateTime}}
					<label for="question"><strong><font color="blue">Please Select a Valid Date and Time*</font></strong></label>
				{{else}}
					<label for="question"><label>Pick a Date and Time For Your Hangout</label></label>
				{{/if}}
                <div class="input-group date form_datetime col-md-5" data-date-format="MM dd yyyy HH:ii p" data-link-field="dtp_input1">
                    <input class="form-control" size="16" type="text" value="" readonly>
					<span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                </div>
				<input type="hidden" id="dtp_input1" name="eventDateTime" value="" /><br/>
		        
		        <br>
		        {{#if invalidMaxPeople}}
		        	<label for="question"><strong><font color="Blue">Please Enter a Guest Limit Number &ge; 0*</font></strong></label> &nbsp;&nbsp;
		        {{else}}
		        	<label for="question">Limit Number of Guests? (0 for No)</label>&nbsp;&nbsp;
		        {{/if}}
		        <input type="number" name="maxPeople" value="{{#if maxPeople}}{{maxPeople}}{{else}}0{{/if}}"> <br><br>
				<button type="submit" class="btn btn-default">Create Hangout</button>
			</form>

		</center>
		<!-- End Content -->

		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>

    <script type="text/javascript" src="js/jquery-1.11.0.js"></script>
    <script type="text/javascript" src="js/bootstrap.js"></script>

    <script type="text/javascript" src="js/jquery-1.8.3.min.js" charset="UTF-8"></script>
	<script type="text/javascript" src="./js/bootstrap.min.js"></script>
	<script type="text/javascript" src="js/bootstrap-datetimepicker.js" charset="UTF-8"></script>
	<script type="text/javascript">
	    $('.form_datetime').datetimepicker({
	        //language:  'fr',
	        weekStart: 1,
	        todayBtn:  1,
			autoclose: 1,
			todayHighlight: 1,
			startView: 2,
			forceParse: 1,
	        showMeridian: 1,
	        pickerPosition: "bottom-left"
	    });
		$('.form_date').datetimepicker({
	        //language:  'fr',
	        weekStart: 1,
	        todayBtn:  1,
			autoclose: 1,
			todayHighlight: 1,
			startView: 2,
			minView: 2,
			forceParse: 1,
			pickerPosition: "bottom-left"
	    });
		$('.form_time').datetimepicker({
	        //language:  'fr',
	        weekStart: 1,
	        todayBtn:  1,
			autoclose: 1,
			todayHighlight: 1,
			startView: 1,
			minView: 0,
			maxView: 1,
			forceParse: 1,
			pickerPosition: "bottom-left"
	    });
	</script>
