<!doctype html>

<html>
<head>
	<title>{{#if myProfile}}My{{else}}View{{/if}} Profile</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="../css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="../css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="../css/poll.css">
	 
</head>

<body>
	<div class="header">
		<center>
			<table>
				<tr>
					<!--td width="50">
						{{#unless myProfile}}
							<button type="button" class="btn btn-default" onclick="window.location.href='/people'">
								<span class="glyphicon glyphicon-arrow-left"></span>
							</button>
						{{/unless}}
					</td-->
					<td width="50"></td>
					<td align="center"><p>{{#if myProfile}}My{{else}}View{{/if}} Profile</p></td>
					<td width="50" align="center"></td>
				</tr>
			</table>
		</center>
	</div>


	<div class="main">

		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
			<br>
		<!-- Content goes here -->
		<center>

			

			{{#if profile}}
				<div class = "profile">
					<h1>{{profile.name}}</h1>
					<img src="{{profile.photo}}" class="img-rounded" width="150" height="150">
					<h3>{{profile.email}}</h3>

					{{#if myProfile}}
						<button type="button" class="btn btn-default btn-lg" onclick="window.location.href='/login'"> Logout </button>
					{{/if}}
				</div>
			{{else}}
				<h3>Could not find user with id {{profileID}}</h3>
			{{/if}}
			
			
			<hr class="event" style="color:#000000;width:100%">
			{{#unless myProfile}}
				<form role="form" method="post" action="/profile/{{profile.id}}">
				  <div class="form-group">
				    <label for="comment">Leave a comment for {{profile.name}}</label>
				    <input type="text" class="form-control" name="comment" placeholder="Leave a comment for {{profile.name}}">
				  </div>
				  <button type="submit" class="btn btn-default">Submit</button>
				</form>
			{{/unless}}
		</center>
		<left>
			{{#if comments}}
				
				<div class="event" style="margin-left:10px;margin-right:10px"><h3>What others have said about you:</h3></div>

				{{#each comments}}
					<div class="event" style="margin-left:10px;margin-right:10px">
						<!--a href="/profile/{{id}}"-->
						<table>
							<tr>
								<td width="75"><img src="{{photo}}" class="img-rounded"></td>
								<td align="center" valign="center"><h3>{{name}}</h3><p>{{comment}}</p></td>
							</tr>
						</table>
						<!--/a-->
					</div>
					<br>
				{{/each}}
			{{/if}}

		</left>
		<!-- End Content -->

		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>

	
	<script type="text/javascript" src="../js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="../js/bootstrap.js"></script>
