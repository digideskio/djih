	<title>My Hangouts</title>  
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
	<link rel="stylesheet" type="text/css" href="css/bootstrap.css">
	<link rel="stylesheet" type="text/css" href="css/bootstrap-theme.css">
	<link rel="stylesheet" type="text/css" href="css/poll.css">
	
	<input type="hidden" id="user_name" value="{{user.name}}"/>
    <input type="hidden" id="poll_id" value="{{pollInfo.id}}"/>
        
</head>

<body>


	<div class="header">
		<center>
			<table>
				<tr>
					<td width="50" align="left"></td>
					<td align="center"><p>My Hangouts</p></td>
					<td width="50" align="right">
						<button type="button" class="btn btn-default" onclick="window.location.href='/addEvent'">
							<span class="glyphicon glyphicon-plus"></span>
						</button>
					</td>
				</tr>
			</table>
		</center>
	</div>

	<div class="subheader">
		<center>
			<table>
				<tr>
					<td><span>You created or decided to attend:</span></td>
				</tr>
			</table>
		</center>
	</div>


	<div class="main">

		<!-- Header placeholder so that header bar doesn't cover content -->
		<div class="headerPlaceholder"></div>
		<br>	
		<br>	
		<!-- Content goes here -->
		<center>

			<!--{{#if altview}} I AM IN ALT VIEW{{/if}} -->
			{{#if events}}
				{{#each events}}
					<div class = "event">
						<table>
							
							{{#if urgent}}
							<input type="hidden" id="event_id" value="{{id}}"/>
							<tr id="event_tr">
								<td width="75"><img src="{{photo}}" class = "img-rounded"></td>
								<td align="center" valign="center"><h3>{{title}}</h3><p>{{description}}</p></td>
								<!--<td width="75" align="right">{{expr}}</td> -->
								<td align="right">
									 {{#if expired}}
									 	<span class="label label-default">Closed</span>
									 {{else}}
									 	{{#if altview}}
									 	<span class="label label-success">
									 	{{else}}
									 	<span class="label label-success">
									 	{{/if}}
									 	<!--<span class="label label-{{#if altview}}danger{{else}}warning{{/if}}"> -->
									 		
										{{#if nospots}} No spots left!
										{{else}}{{spots}}
										{{/if}}
										<br>{{timeleft}}</span></td>
									 {{/if}}
							    </td>
							</tr>
						

							{{else}}
							<tr onclick="document.location = 'eventView/{{id}}';">
								<td width="75"><img src="{{photo}}" class = "img-rounded"></td>
								<td align="center" valign="center"><h3>{{title}}</h3><p>{{description}}</p></td>
								<!--<td width="75" align="right">{{expr}}</td> -->
								<td align="right">
									 {{#if expired}}
									 	<span class="label label-default">Closed</span>
									 {{else}}
									 	{{#if altview}}
									 	<span class="label label-success">
									 	{{else}}
									 	<span class="label label-{{#if urgent}}warning{{else}}success{{/if}}">
									 	{{/if}}
									 	<!--<span class="label label-{{#if altview}}danger{{else}}warning{{/if}}"> -->
									 		
										{{#if nospots}} No spots left!
										{{else}}{{spots}}
										{{/if}}
										<br>{{timeleft}}</span></td>
									 {{/if}}
							    </td>
							</tr>
							{{/if}}
						</table><hr style="color:#000000;width:100%;">
					</div>
				{{/each}}
			{{else}}
				<h1> You have 0 Hangout Polls</h1>
			{{/if}}

		</center>
		<!-- End Content -->

		<!-- Footer placeholder so that link bar doesn't cover content -->
		<div class="footerPlaceholder"></div>

	</div>

	<div class="bar">
		<center>
			<div class="btn-group btn-group-justified">
  				<div class="btn-group">
    				<a href="/myevents"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-glass"></span><br>myHangouts</button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/events"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-globe"></span><br>Hangouts<br></button></a>
  				</div>
  				<div class="btn-group">
    				<a href="/people"><button type="button" class="btn btn-default"><span class="glyphicon glyphicon-search"></span><br>Community<br></button></a>
  				</div>
  				<div class="btn-group">
    				{{#if user}}<a href="/profile/{{user.id}}">{{else}}<a href="/profile">{{/if}}
    				<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span><br>Profile</button></a>
  				</div>
			</div>
		</center>
	</div>

	
	<script type="text/javascript" src="js/jquery-1.11.0.js"></script>
	<script type="text/javascript" src="js/bootstrap.js"></script>
	<script src="../js/view_helper.js"></script>

